# Environment Configuration
ENVIRONMENT=development

# Database Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
POSTGRESQL_URL=postgresql://user:password@localhost:5432/vivacita_chat

# AI Configuration
# OpenRouter for main LLM (Claude Sonnet 4)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenAI for Whisper (audio transcription)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_WHISPER_MODEL=whisper-1

# WhatsApp Integration
EVOLUTION_API_URL=your_evolution_api_url_here
EVOLUTION_API_KEY=your_evolution_api_key_here

# N8N Integration - REMOVED (sistema independente)
# N8N_WEBHOOK_URL=your_n8n_webhook_url_here
# N8N_API_KEY=your_n8n_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1
PROJECT_NAME="Vivacita Chat System"

# Security
SECRET_KEY=your_secret_key_here_generate_a_secure_one
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
SENTRY_DSN=your_sentry_dsn_here_optional